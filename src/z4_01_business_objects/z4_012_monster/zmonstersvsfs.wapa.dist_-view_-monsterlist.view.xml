<mvc:View controllerName="monstersvsfs.controller.MonsterList"                                                                                                                                                                                                 
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true"                                                                                                                                                                                                               
	xmlns="sap.m">                                                                                                                                                                                                                                                
	<Shell id="shell">                                                                                                                                                                                                                                            
		<App id="app">                                                                                                                                                                                                                                               
			<pages>                                                                                                                                                                                                                                                     
				<Page id="page" title="{i18n>title}" class="marginBoxContent">                                                                                                                                                                                             
					<headerContent>                                                                                                                                                                                                                                           
						<Button icon="sap-icon://action" />                                                                                                                                                                                                                      
				             <Button                                                                                                                                                                                                                                       
   				             text="Open Action Sheet"                                                                                                                                                                                                                   
 				        	 press="handleOpen" />                                                                                                                                                                                                                           
					</headerContent>                                                                                                                                                                                                                                          
					<subHeader>                                                                                                                                                                                                                                               
						<Toolbar>                                                                                                                                                                                                                                                
							<SearchField width="200px" liveChange="onSearch" />                                                                                                                                                                                                     
						</Toolbar>                                                                                                                                                                                                                                               
					</subHeader>                                                                                                                                                                                                                                              
					<content>                                                                                                                                                                                                                                                 
						<Table id="idMonstersTable" inset="false" items="{path: '/Monsters'}">                                                                                                                                                                                   
							<headerToolbar>                                                                                                                                                                                                                                         
								<Toolbar>                                                                                                                                                                                                                                              
									<Label text="Monsters"></Label>                                                                                                                                                                                                                       
								</Toolbar>                                                                                                                                                                                                                                             
							</headerToolbar>                                                                                                                                                                                                                                        
							<columns>                                                                                                                                                                                                                                               
								<Column>                                                                                                                                                                                                                                               
									<Text text="Name and Number" />                                                                                                                                                                                                                       
								</Column>                                                                                                                                                                                                                                              
								<Column>                                                                                                                                                                                                                                               
									<Text text="Number of Heads" />                                                                                                                                                                                                                       
								</Column>                                                                                                                                                                                                                                              
								<Column>                                                                                                                                                                                                                                               
									<Text text="Sanity" />                                                                                                                                                                                                                                
								</Column>                                                                                                                                                                                                                                              
								<Column>                                                                                                                                                                                                                                               
									<Text text="Hat Size" />                                                                                                                                                                                                                              
								</Column>                                                                                                                                                                                                                                              
							</columns>                                                                                                                                                                                                                                              
							<items>                                                                                                                                                                                                                                                 
								<ColumnListItem type="Navigation" press="onMonsterSelected">                                                                                                                                                                                           
									<cells>                                                                                                                                                                                                                                               
										<ObjectIdentifier title="{Name}" text="Monster Id {MonsterNumber}" class="sapMTableContentMargin" />                                                                                                                                                 
										<Text text="{NoOfHeads}" />                                                                                                                                                                                                                          
										<Text text="{SanityDescription}" />                                                                                                                                                                                                                  
										<Text text="{HatSizeDescription}" />                                                                                                                                                                                                                 
									</cells>                                                                                                                                                                                                                                              
								</ColumnListItem>                                                                                                                                                                                                                                      
							</items>                                                                                                                                                                                                                                                
						</Table>                                                                                                                                                                                                                                                 
					</content>                                                                                                                                                                                                                                                
					<footer>                                                                                                                                                                                                                                                  
						<Toolbar>                                                                                                                                                                                                                                                
							<ToolbarSpacer/>                                                                                                                                                                                                                                        
							<Button text="Accept" type="Accept" />                                                                                                                                                                                                                  
							<Button text="Reject" type="Reject" />                                                                                                                                                                                                                  
							<Button text="Edit" />                                                                                                                                                                                                                                  
							<Button text="Delete" />                                                                                                                                                                                                                                
						</Toolbar>                                                                                                                                                                                                                                               
					</footer>                                                                                                                                                                                                                                                 
				</Page>                                                                                                                                                                                                                                                    
			</pages>                                                                                                                                                                                                                                                    
		</App>                                                                                                                                                                                                                                                       
	</Shell>                                                                                                                                                                                                                                                      
</mvc:View>                                                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                               